@model IEnumerable<Test.Models.Ranks>

@{
    ViewBag.Title = "Должности";
}

<h2>Должности</h2>

<p>
    @Html.ActionLink("Добавить должность", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Должность
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Rank_name)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.ID_Rank }) |
            @Html.ActionLink("Подробно", "Details", new { id=item.ID_Rank }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.ID_Rank })
        </td>
    </tr>
}

</table>
