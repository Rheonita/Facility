<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – Производство</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">Предприятие<span class="glyphicon glyphicon-star"></span></a>
                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Финансы
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Index", "Budjets")">Бюджет</a></li>
                            <li> <a href="@Url.Action("Index", "Payment_Logs")">Выдача зарплаты</a></li>
                            <li> <a href="@Url.Action("Index", "Credit_Info")">Кредиты</a></li>
                            <li> <a href="@Url.Action("Index", "Credit_Repayment")">Погашение кредита</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Управление персоналом
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Index", "Employers")">Сотрудники</a></li>
                            <li><a href="@Url.Action("Index", "Ranks")">Должности</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Склад
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Index", "BuyStocks")">Покупка сырья</a></li>
                            <li><a href="@Url.Action("Index", "Stocks")">Сырьё</a></li>
                            <li><a href="@Url.Action("Index", "Finished_Production")">Готовая продукция</a></li>
                            <li><a href="@Url.Action("Index", "Measurement_Unit")">Единицы измерения</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Работа с продукцией
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Index", "Manufactures")">Производство продукции</a></li>
                            <li><a href="@Url.Action("Index", "Sales_of_Prod")">Продажа продукции</a></li>
                            <li><a href="@Url.Action("Index", "Ingredients")">Рецептура</a></li>
                            <li><a href="@Url.Action("Index", "Measurement_Unit")">Единицы измерения</a></li>
                        </ul>
                    </li>                                        
                </ul>               
            </div>            
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year – приложение ASP.NET</p>
        </footer>
    </div>
   
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

