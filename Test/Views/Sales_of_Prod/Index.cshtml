@model IEnumerable<Test.Models.Sales_of_Prod>

@{
    ViewBag.Title = "Продажа продукции";
}

<h2>Продажи</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Продукция
        </th>
        <th>
            Общее количество
        </th>
        <th>
            Стоимость
        </th>
        <th>
            Дата
        </th>
        <th>
            Ответственный сотрудник
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Finished_Production.Name_FinPr)
            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total_Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employers.Name_of_Emp)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.ID_SalesProd }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.ID_SalesProd }) |*@
            @Html.ActionLink("Удалить", "Delete", new { id=item.ID_SalesProd })
        </td>
    </tr>
}

</table>
