@model IEnumerable<Test.Models.Manufacture>

@{
    ViewBag.Title = "Производство продукции";
}

<h2>Производство</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Продукция
        </th>
        <th>
            Общее количество
        </th>
        <th>
            Дата
        </th>
        <th>
            Сотрудник
            </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            
            @Html.DisplayFor(modelItem => item.Finished_Production.Name_FinPr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total_Amount)
           
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employers.Name_of_Emp)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.ID_Manufacture }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.ID_Manufacture }) |*@
            @Html.ActionLink("Удалить", "Delete", new { id=item.ID_Manufacture })
        </td>
    </tr>
}

</table>
